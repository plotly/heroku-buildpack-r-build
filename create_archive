#!/bin/bash

# fail fast
set -e

# debug
# set -x

R_VERSION="$1"
BUILD_NO="$2"
STACK="$3"

function topic() {
  echo "-----> $*"
}

ARCHIVE="R-$R_VERSION-binaries-$BUILD_NO-prebuild.tar.gz"
APP_DIR="/app"

pushd $APP_DIR > /dev/null

#======================================================================
topic 'Packaging binaries'

# NOTE: /var/tmp is mounted by docker
apt-get -qy install bsdtar
bsdtar czf "/var/tmp/$ARCHIVE" .root .tools

popd > /dev/null
exit 0
